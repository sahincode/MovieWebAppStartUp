@page
@model MoviesWebApp.Pages.Series.IndexModel
@{
}
<div class="container-fluid ">
    <h1 class="fs-6 mt-2 btn btn-success">Serials</h1>
    <div class="row mt-3">
        @foreach (var movie in Model.Serials)
        {
            @foreach (var season in movie.Seasons)
            {
                <div class=" movie col-xs-2 col-3 col-md-4 col-lg-6 col-xl-12">

                    <a class="a-movie" asp-page="/Serials/TV-SeriesDetails" asp-route-id="@season.Id">
                        <div class="card-body">
                            <img class="card-img-top" src="@(season.ImageUrl is not null ?
                            $"../assets/uploads/movies/images/{season.ImageUrl}":
                        $"https://fakeimg.pl/300x300/?text= {movie.Name}" )" />

                            <div class="movie-details">
                                <h2 class="card-title ">@movie.Name</h2>
                                <h2 class="card-title ">@season.Name</h2>


                            </div>
                            <span class="movie-quality-span">EPS 1</span>

                            <i class=" play-icon fa-solid fa-circle-play"></i>
                        </div>

                    </a>
                </div>
            }

        }
    </div>

    @if (Model.Serials.Count >= 50)
    {
        <nav class="d-flex align-item-center justify-content-center" aria-label="...">
            <ul class="pagination">
                <li class="page-item @(!Model.Serials.HasPrev ? "disabled" :"")">
                    <a class="page-link" asp-page="/Movies/Movie" asp-route-paged="@(Model.Serials.CurrentPage-1)" tabindex="-1" aria-disabled="true">
                        <i class="fa-solid fa-angles-left"></i> Prev
                    </a>
                </li>
                @for (int i = 1; i <= Model.Serials.PageCount; i++)
                {
                    <li class=" @(Model.Serials.CurrentPage==i ? "active" :"") page-item">
                        <a class="page-link" asp-page="/Movies/Movie" asp-route-paged="@i">@i</a>
                    </li>

                }
                <li class="page-item @(!Model.Serials.HasNext ? "disabled" : "")">
                    <a class="page-link" asp-page="/Movies/Movie" asp-route-paged="@(Model.Serials.CurrentPage+1)">Next <i class="fa-solid fa-angles-right"></i></a>
                </li>
            </ul>
        </nav>
    }
</div>
