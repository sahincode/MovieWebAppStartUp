@using Microsoft.AspNetCore.Identity
@using MoviesWebApp.Core.Models;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav d-blok">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-bar-link" asp-area="Identity" asp-page="/Account/Manage/Logo" title="Manage">@User.Identity?.Name!</a>
        </li>
        
    }
    else
    {
        <li class="nav-item">
            <a class="nav-bar-link" asp-area="Identity" asp-page="/Account/Register">Sign Up</a>
        </li>
        <li class="nav-item">
            <a class="nav-bar-link" asp-area="Identity" asp-page="/Account/Login">Sign In</a>
        </li>
      
    }
</ul>