@page
@using MoviesWebApp.Areas.Admin.Pages.AdminMovie
@model CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Movies</h4>
<hr />
<form method="post" enctype="multipart/form-data"> 
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Movies.Title" class="control-label"></label>
                <input asp-for="Movies.Title" class="form-control" />
                <span asp-validation-for="Movies.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movies.Description" class="control-label"></label>
                <input asp-for="Movies.Description" class="form-control" />
                <span asp-validation-for="Movies.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movies.Actors" class="control-label"></label>
                <input asp-for="Movies.Actors" class="form-control" />
                <span asp-validation-for="Movies.Actors" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Movies.Genre" class="control-label"></label>
                <select asp-for="Movies.Genre" class="form-select" asp-items="Model.GenreList">
                    <option>Not Selected</option>
                </select>
                <span asp-validation-for="Movies.Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movies.Director" class="control-label"></label>
                <input asp-for="Movies.Director" class="form-control" />
                <span asp-validation-for="Movies.Director" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movies.Country" class="control-label"></label>
                <input asp-for="Movies.Country" class="form-control" />
                <span asp-validation-for="Movies.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movies.Duration" class="control-label"></label>
                <input asp-for="Movies.Duration" class="form-control" />
                <span asp-validation-for="Movies.Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movies.ReleaseDate" class="control-label"></label>
                <input asp-for="Movies.ReleaseDate" class="form-control" />
                <span asp-validation-for="Movies.ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movies.IMDB" class="control-label"></label>
                <input asp-for="Movies.IMDB" class="form-control" />
                <span asp-validation-for="Movies.IMDB" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <img width="400" height="500" id="Imgpre" src="https://fakeimg.pl/250x400/?text= Movies Image " alt="Movies Image " />
                    <br />
                    <br />
                    <input type="file" id="ImageIN" asp-for="Movies.Image" />
                </div>
                
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <img width="400" height="500" id="Videopre" src="https://fakeimg.pl/250x400/?text= Movies Video " alt="Movies Video " />
                    <br />
                    <br />
                    <input type="file" id="VideoIN" asp-for="Movies.Video" />
                </div>

            </div>
        </div>
    </div>
</form>


<div>
    <a asp-page="Index">Back to List</a>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $("#ImageIN").change(function () {
                const file = this.files[0];
                const reader = new FileReader();
                reader.onload = function (e) {
                    $("#Imgpre").attr("src", e.target.result);
                }
                reader.readAsDataURL(file);
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}