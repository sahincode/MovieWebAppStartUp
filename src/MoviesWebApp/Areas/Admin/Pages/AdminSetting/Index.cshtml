@page
@using MoviesWebApp.Areas.Admin.Pages.AdminSetting

@model IndexModel
@{
    int counter = 0;

}
@section cssFiles{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.10.1/sweetalert2.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
}

<div class="container-fluid">
    <div class="table-title text-white">
        <h1 class="title">Settings<span>|Table</span></h1>
        <a class="btn btn-success create-btn" asp-page="Create">Create</a>
    </div>
    <table class="table table-hover table-striped shadow">
        <thead>
            <tr>
                <th>NO</th>
                <th>
                    @Html.DisplayNameFor(model => model.Settings[0].Address)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Settings[0].Contact)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Settings[0].Email)
                </th>

                <th>
                    Controls
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var setting in Model.Settings)
            {
                <div class="modal fade" id="item@(setting.Id)Modal" tabindex="-1" aria-labelledby="item@(setting.Id)ModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-xl ">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title btn btn-success" id="item@(setting.Id)ModalLabel">About</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="border-bottom-info">
                                <div>
                                    <h5 class="font-weight-bold">Created Time:<span class="text-danger"> @(setting.CreationTime.ToString("dddd, dd MMMM yyyy hh:mm:ss"))</span></h5>
                                </div>
                                <div>
                                    <h5 class="font-weight-bold">Updated Time:<span class="text-danger"> @(setting.UpdateTime.ToString("dddd, dd MMMM yyyy hh:mm:ss"))</span></h5>
                                </div>
                            </div>
                            <div class="modal-body">
                                Address: @setting.Address
                            </div>
                            <div class="modal-body">
                                Email: @setting.Email

                            </div>
                            <div class="modal-body">
                                Contact : @setting.Contact
                            </div>
                            <div class="modal-body">
                                Facebook : @setting.FaceUrl
                            </div>
                             <div class="modal-body">
                                Instagram : @setting.InstaUrl
                            </div> 
                            <div class="modal-body">
                                Twitter : @setting.XUrl
                            </div> 
                            <div class="modal-body">
                                Whatsapp : @setting.WhatUrl
                            </div>

                        </div>
                    </div>
                </div>
                counter++;
                <tr>
                    <td>@counter</td>
                    <td>
                        @Html.DisplayFor(modelItem => setting.Address)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => setting.Contact)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => setting.Email)

                    </td>


                    <td style="min-width:165px;">

                        <a class="btn btn-danger btn-delete">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                        <a class="btn btn-info" asp-page="./Details" asp-route-id="@setting.Id">
                            <i class="fa-solid fa-circle-info"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section jsFiles{
    <script src="~/assets/js/main.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.10.1/sweetalert2.min.js"></script>
}