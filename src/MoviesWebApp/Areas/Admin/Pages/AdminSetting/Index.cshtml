@page
@using MoviesWebApp.Areas.Admin.Pages.AdminSetting

@model IndexModel
@{
    int counter = 0;

}
@section cssFiles{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.10.1/sweetalert2.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
}
<style>
    .table-title {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 15px 40px;
        background-color: #435d7d !important;
    }

        .table-title .title {
            font-weight: 700;
        }

        .table-title span {
            font-weight: 300;
        }

    .create-btn {
        width: 110px;
    }

</style>
<div class="container-fluid">
    <div class="table-title text-white">
        <h1 class="title">Settings<span>|Table</span></h1>
        <a class="btn btn-success create-btn" asp-page="Create">Create</a>
    </div>
    <table class="table table-hover table-striped shadow">
        <thead>
            <tr>
                <th>NO</th>
                <th>
                    @Html.DisplayNameFor(model => model.Settings[0].Address)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Settings[0].Contact)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Settings[0].Email)
                </th>
                
                <th>
                    Controls
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var setting in Model.Settings)
            {
                counter++;
                <tr>
                    <td>@counter</td>
                    <td>
                        @Html.DisplayFor(modelItem => setting.Address)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => setting.Contact)
                    </td>
                   

                    <td>
                        @Html.DisplayFor(modelItem => setting.Email)

                    </td>
                    
                    
                    <td style="min-width:165px;">
                       
                        <a class="btn btn-danger delete-btn">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                        <a class="btn btn-info" asp-page="./Details" asp-route-id="@setting.Id">
                            <i class="fa-solid fa-circle-info"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section jsFiles{
    <script src="~/assets/js/main.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert2/11.10.1/sweetalert2.min.js"></script>
}