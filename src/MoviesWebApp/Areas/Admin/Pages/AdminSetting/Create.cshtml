@page
@model MoviesWebApp.Areas.Admin.Pages.AdminSetting.CreateModel
@{
}
<style>
    .table-title {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 15px 40px;
        background-color: #435d7d !important;
    }

        .table-title .title {
            font-weight: 700;
        }

        .table-title span {
            font-weight: 300;
        }

    .create-btn {
        width: 110px;
    }

</style>
<div class="container-fluid">
    <div class="table-title text-white">
        <h1 class="title">Movie<span>|Create</span></h1>
        <a class="btn btn-success create-btn" asp-page="./Index">Back to List</a>
    </div>
    <form method="post" enctype="multipart/form-data">
        <div class="row">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-4">
                <label asp-for="Setting.Address" class="control-label"></label>
                <input asp-for="Setting.Address" class="form-control" />
                <span asp-validation-for="Setting.Address" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Setting.Contact" class="control-label"></label>
                <input asp-for="Setting.Contact" class="form-control" />
                <span asp-validation-for="Setting.Contact" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Setting.Email" class="control-label"></label>
                <input asp-for="Setting.Email" class="form-control" />
                <span asp-validation-for="Setting.Email" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Setting.FaceUrl" class="control-label"></label>
                <input asp-for="Setting.FaceUrl" class="form-control" />
                <span asp-validation-for="Setting.FaceUrl" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Setting.XUrl" class="control-label"></label>
                <input asp-for="Setting.XUrl" class="form-control" />
                <span asp-validation-for="Setting.XUrl" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Setting.WhatUrl" class="control-label"></label>
                <input asp-for="Setting.WhatUrl" class="form-control" />
                <span asp-validation-for="Setting.WhatUrl" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Setting.InstaUrl" class="control-label"></label>
                <input asp-for="Setting.InstaUrl" class="form-control" />
                <span asp-validation-for="Setting.InstaUrl" class="text-danger"></span>
            </div>
           
        </div>
      
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>


