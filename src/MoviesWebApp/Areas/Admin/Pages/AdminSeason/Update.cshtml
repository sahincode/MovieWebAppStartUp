@page
@model MoviesWebApp.Areas.Admin.Pages.AdminSeason.UpdateModel
@{
    ViewData["Title"] = "Update";
}


<div class="container-fluid">
    <div class="table-title text-white  d-block d-sm-flex">
        <div>
            <h1 class="title">Seasons<span>@ViewData["Title"]</span></h1>
        </div>
        <div>
            <a class="btn btn-success create-btn" style="min-width:150px !important;" asp-page="./Index">Back to List</a>
        </div>
    </div>

    <form method="post" class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-lg-3 col-xl-4">
            <label asp-for="SeasonUpdateDto.Name" class="control-label"></label>
            <input asp-for="SeasonUpdateDto.Name" class="form-control" />
            <span asp-validation-for="SeasonUpdateDto.Name" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-3 col-xl-4">
            <label asp-for="SeasonUpdateDto.SerialId" class="control-label">Serial</label>
            <select asp-for="SeasonUpdateDto.SerialId" class="form-select" asp-items="Model.Serials">
            </select>
            <span asp-validation-for="SeasonUpdateDto.SerialId" class="text-danger"></span>
        </div>

        <div class="form-group col-lg-3 col-xl-4">
            <label asp-for="SeasonUpdateDto.Country" class="control-label"></label>
            <select asp-for="SeasonUpdateDto.Country" class="form-select" asp-items="Model.Countries">
            </select>
            <span asp-validation-for="SeasonUpdateDto.Country" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3 position-relative">
            <img width="200" height="300" id="Imgpre" src="https://fakeimg.pl/250x400/?text= Movies Image " alt="Movies Image " />
            <br />
            <br />
            <input type="file" id="ImageIN" asp-for="SeasonUpdateDto.Image" />
            <span asp-validation-for="SeasonUpdateDto.Image" class="text-danger"></span>

        </div>
        <div class="form-group col-lg-7 col-xl-8 ">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </form>


</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $("#ImageIN").change(function () {
                const file = this.files[0];
                const reader = new FileReader();
                reader.onload = function (e) {
                    $("#Imgpre").attr("src", e.target.result);
                }
                reader.readAsDataURL(file);
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}