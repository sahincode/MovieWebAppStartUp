@page
@model MoviesWebApp.Areas.Admin.Pages.AdminGenre.UpdateModel
@{
    ViewData["Title"] = "Update";
}

<style>
    .table-title {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 15px 40px;
        background-color: #435d7d !important;
    }

        .table-title .title {
            font-weight: 700;
        }

        .table-title span {
            font-weight: 300;
        }

    .create-btn {
        width: 110px;
    }

</style>
<div class="container-fluid">
    <div class="table-title text-white">
        <h1 class="title">Genre<span>|Update</span></h1>
        <a class="btn btn-success create-btn" style="min-width :150px !important" asp-page="./Index">Back to List</a>
    </div>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GenreUpdateDto.Name" class="control-label"></label>
            <input asp-for="GenreUpdateDto.Name" class="form-control col-xs-2 col-sm-3 col-md-4 col-lg-6 col-xl-8" />
                <span asp-validation-for="GenreUpdateDto.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
</div>
@section Scripts{
    <script src="~/ckeditor/styles.js"></script>
    <script src="~/ckeditor/ckeditor.js"></script>

    <script type="text/javascript">
        CKEDITOR.replace('editorid')
    </script>
}
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
