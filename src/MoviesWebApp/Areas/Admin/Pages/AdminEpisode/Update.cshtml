@page
@using MoviesWebApp.Areas.Admin.Pages.AdminEpisode
@model UpdateModel

@{
    ViewData["Title"] = "Edit";
}

<style>
    .table-title {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 15px 40px;
        background-color: #435d7d !important;
    }

        .table-title .title {
            font-weight: 700;
        }

        .table-title span {
            font-weight: 300;
        }

    .create-btn {
        width: 110px;
    }

</style>
<div class="container-fluid">
    <div class="table-title text-white">
        <h1 class="title">Episode<span>|Create</span></h1>
        <a class="btn btn-success create-btn" asp-page="./Index">Back to List</a>
    </div>
    <form method="post" enctype="multipart/form-data">
        <div class="row">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-4">
                <label asp-for="Episode.Name" class="control-label"></label>
                <input asp-for="Episode.Name" class="form-control" />
                <span asp-validation-for="Episode.Name" class="text-danger"></span>
            </div>

            <div class="form-group col-md-4">
                <label asp-for="Episode.Actors" class="control-label"></label>
                <input asp-for="Episode.Actors" class="form-control" />
                <span asp-validation-for="Episode.Actors" class="text-danger"></span>
            </div>

            <div class="form-group col-md-4">
                <label asp-for="Episode.Director" class="control-label"></label>
                <input asp-for="Episode.Director" class="form-control" />
                <span asp-validation-for="Episode.Director" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Episode.Country" class="control-label"></label>
                <select asp-for="Episode.Country" class="form-select" asp-items="Model.Countries">
                    <option selected="true" disabled="disabled">Not Selected</option>
                </select>
                <span asp-validation-for="Episode.Country" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Episode.SeasonId" class="control-label">Season</label>
                <select asp-for="Episode.SeasonId" class="form-select" asp-items="Model.Seasons">
                    <option selected="true" disabled="disabled">Not Selected</option>
                </select>
                <span asp-validation-for="Episode.Country" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Episode.SerialId" class="control-label">Serial</label>
                <select asp-for="Episode.SerialId" class="form-select" asp-items="Model.Serials">
                    <option selected="true" disabled="disabled">Not Selected</option>
                </select>
                <span asp-validation-for="Episode.SerialId" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Episode.Duration" class="control-label"></label>
                <input asp-for="Episode.Duration" class="form-control" />
                <span asp-validation-for="Episode.Duration" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Episode.ReleaseDate" class="control-label"></label>
                <input asp-for="Episode.ReleaseDate" class="form-control" />
                <span asp-validation-for="Episode.ReleaseDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3  col-md-4">
                <label asp-for="Episode.GenreIds" class="control-label"></label>
                <select asp-for="Episode.GenreIds" class="form-select" asp-items="Model.GenreList">
                    <option selected="false" disabled="disabled">Not Selected</option>
                </select>
                <span asp-validation-for="Episode.GenreIds" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-3 position-relative">
                <img width="200" height="300" id="Imgpre" src="https://fakeimg.pl/250x400/?text= Episodes Image " alt="Episodes Image " />
                <br />
                <br />
                <input type="file" id="ImageIN" asp-for="Episode.Image" />
            </div>
            <div class="form-group ms-3 col-md-3 position-relative">
                <img width="200" height="300" id="Videopre" src="https://fakeimg.pl/250x400/?text= Episodes Video " alt="Episodes Video " />
                <br />
                <br />
                <input type="file" id="VideoIN" asp-for="Episode.Video" />
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </form>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $("#ImageIN").change(function () {
                const file = this.files[0];
                const reader = new FileReader();
                reader.onload = function (e) {
                    $("#Imgpre").attr("src", e.target.result);
                }
                reader.readAsDataURL(file);
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}