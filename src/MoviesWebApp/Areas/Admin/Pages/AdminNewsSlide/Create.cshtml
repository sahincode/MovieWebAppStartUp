@page
@model MoviesWebApp.Areas.Admin.Pages.AdminNewsSlide.CreateModel
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">
    <div class="table-title text-white  d-block d-sm-flex">
        <div>
            <h1 class="title">News <span>@ViewData["Title"]</span></h1>
        </div>
        <div>
            <a class="btn btn-success create-btn" style="min-width:150px !important;" asp-page="./Index">Back to List</a>
        </div>
    </div>

    <form method="post" class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-lg-7 col-xl-8 ">
            <label asp-for="NewsSlideCreateDto.Title" class="control-label"></label>
            <input asp-for="NewsSlideCreateDto.Title" class="form-control" />
            <span asp-validation-for="NewsSlideCreateDto.Title" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-7 col-xl-8 ">
            <label asp-for="NewsSlideCreateDto.SubDescription" class="control-label"></label>
            <textarea asp-for="NewsSlideCreateDto.SubDescription" class="form-control"></textarea>
            <span asp-validation-for="NewsSlideCreateDto.SubDescription" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-7 col-xl-8">
            <label asp-for="NewsSlideCreateDto.Description" class="control-label"></label>
            <textarea id="news-editor" asp-for="NewsSlideCreateDto.Description" class="form-control"></textarea>
            <span asp-validation-for="NewsSlideCreateDto.Description" class="text-danger"></span>
        </div>
        <div class="form-group col-lg-7 col-xl-8 ">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>


</div>
@section Scripts{
    <script src="~/ckeditor/styles.js"></script>
    <script src="~/ckeditor/ckeditor.js"></script>

    <script type="text/javascript">
        CKEDITOR.replace('news-editor')
    </script>
}
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
