using MoviesWebApp.Business.DTOs.EpisodeDTOs;
using MoviesWebApp.Core.Models;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Linq.Expressions;
using System.Text;
using System.Threading.Tasks;

namespace MoviesWebApp.Business.Services.Interfaces
{
    public interface IEpisodeService
    {
        Task CreateAsync(EpisodeCreateDto entity);
        Task UpdateAsync( EpisodeUpdateDto entity);
        Task Delete(int id);
        Task ToggleDelete(int id);
        Task<Episode> GetById(int? id);
        Task<Episode> Get(Expression<Func<Episode, bool>>? predicate, params string[]? includes);
        Task<IEnumerable<Episode>> GetAll(Expression<Func<Episode, bool>>? predicate, params string[]? includes);
    }
}
